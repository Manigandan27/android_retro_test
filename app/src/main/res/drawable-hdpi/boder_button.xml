<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dp" />
            <stroke android:width="1dip"
                android:color="@color/drkk_desgin" />
            <gradient android:angle="-90" android:startColor="@color/drkk_desgin" android:endColor="@color/drkk_desgin"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dp" />
            <stroke android:width="1dip" android:color="@color/drkk_desgin" />
            <solid android:color="@color/drkk_desgin"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dp" />
            <stroke android:width="1dip" android:color="@color/drkk_desgin" />
            <gradient android:angle="-90" android:startColor="@color/drkk_desgin" android:endColor="@color/drkk_desgin"  />

        </shape>
    </item>
</selector>