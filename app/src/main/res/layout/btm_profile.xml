<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_second_fragment"
    android:orientation="vertical"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout

    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_weight="1"
    android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp">

        <ImageView
            android:tag="male"
            android:id="@+id/mlogimgvie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/mprofilelogo"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_create" />

            </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ImageView
            android:visibility="gone"
            android:tag="female"
            android:id="@+id/flogimgvie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/wprofilelogo"
            />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
<!--        card 1-->

        <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:id="@+id/prof_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/logimgvie1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/mprofilelogo"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

        <ImageView
            android:id="@+id/prof_change1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_create" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

<!--   card text  -->
        <TextView
            android:visibility="gone"
            android:id="@+id/prof_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_margin="8dp"
            android:textSize="18sp"
            />


        <!--      card 2      -->

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"

            android:id="@+id/prof_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="70dp">

            <ImageView
                android:id="@+id/logimgvie2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/wprofilelogo"
                />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                app:cardCornerRadius="70dp">

                <ImageView

                    android:id="@+id/prof_change2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_create"
                    />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        </LinearLayout>


</LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:hint="@string/fname"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:padding="@dimen/dimen5dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:hint="@string/lname"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp">

            <EditText
                android:id="@+id/userName1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:padding="@dimen/dimen5dp" />
        </com.google.android.material.textfield.TextInputLayout>

<!--  android:background="@drawable/custom_border"     -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:paddingTop="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:hint="@string/mobile_number"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/userName3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:padding="@dimen/dimen5dp" />
        </com.google.android.material.textfield.TextInputLayout>

            <TextView

                android:layout_marginLeft="-50dp"
                android:layout_marginRight="50dp"
                android:text="update"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:hint="@string/email"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/userName4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:padding="@dimen/dimen5dp" />
        </com.google.android.material.textfield.TextInputLayout>

            <TextView

                android:layout_marginLeft="-50dp"
                android:layout_marginRight="50dp"
                android:text="update"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

    </LinearLayout>


<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@drawable/oval"-->
<!--            android:backgroundTint="#7E000000"-->
<!--            android:padding="@dimen/dimen5dp"-->
<!--            android:paddingLeft="@dimen/dimen24dp"-->
<!--            android:paddingRight="@dimen/dimen24dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            />-->


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="@dimen/dimen5dp"
            android:layout_marginLeft="@dimen/dimen24dp"
            android:layout_marginRight="@dimen/dimen24dp"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate Account"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp"
            />

    </LinearLayout>


</LinearLayout>